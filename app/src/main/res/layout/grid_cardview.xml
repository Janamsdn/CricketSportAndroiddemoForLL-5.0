<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="125dp"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="9dp"
    card_view:cardBackgroundColor="@color/material_blue_grey_900"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="135dp"
            android:scaleType="fitXY"
            android:layout_margin="2dp"
            android:id="@+id/movie_image"
            android:src="@drawable/trophy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Avatar"
            android:fontFamily="sans-serif-medium"
            android:textColor="#fff"
            android:gravity="center_horizontal"
            android:textSize="10dp"
            android:paddingLeft="4dp"
            android:id="@+id/title"
            android:layout_below="@+id/movie_image"/>

        <ImageView
            android:id="@+id/overflow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:focusable="false"
            android:paddingLeft="5dp"
            android:clickable="false"
            android:src="@drawable/overflow"
            android:layout_below="@+id/movie_image"
            android:layout_alignEnd="@+id/movie_image" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ratings : "
            android:textColor="#fff"
            android:paddingTop="5dp"
            android:paddingLeft="4dp"
            android:id="@+id/ratings"
            android:fontFamily="sans-serif-medium"
            android:textSize="12dp"
            android:layout_below="@+id/title"
            android:layout_toEndOf="@+id/movie_image" />

        <RatingBar
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/ratingBar"
            android:paddingTop="5dp"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="10"
            android:rating="8.5"
            android:layout_alignTop="@+id/ratings"
            android:layout_toEndOf="@+id/ratings" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Year :"
            android:textColor="#fff"
            android:paddingTop="5dp"
            android:paddingLeft="4dp"
            android:id="@+id/year"
            android:fontFamily="sans-serif-medium"
            android:textSize="12dp"
            android:layout_alignTop="@+id/yeartext"
            android:layout_toStartOf="@+id/yeartext" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="2010"
            android:layout_marginRight="20dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-medium"
            android:textColor="#fff"
            android:gravity="center_horizontal"
            android:textSize="10dp"
            android:paddingLeft="4dp"
            android:id="@+id/yeartext"
            android:layout_below="@+id/title"
             />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Fearless optimist Anna teams up with Kristoff in an epic journey, encountering Everest-like conditions, and a hilarious snowman named Olaf in a race to find Anna's sister Elsa, whose icy powers have trapped the kingdom in eternal winter."
            android:paddingLeft="4dp"
            android:textColor="#fff"
            android:id="@+id/descriptiontext"
            android:fontFamily="sans-serif-light"
            android:textSize="12dp"
            android:layout_below="@+id/textView"
            android:layout_toEndOf="@+id/movie_image" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Description :"
            android:textColor="#fff"
            android:paddingTop="5dp"
            android:paddingLeft="4dp"
            android:id="@+id/textView"
            android:fontFamily="sans-serif-medium"
            android:textSize="12dp"
            android:layout_below="@+id/ratings"
            android:layout_toEndOf="@+id/movie_image" />

    </RelativeLayout>

</android.support.v7.widget.CardView>